program Example_REPEAT;
Uses wincrt; 
var 
   n,tot,x,i: integer;    
Mean: real; 
begin 
     clrscr; 
tot:=0; i:=1;
write ('Read the numbers of Data :');readln(n);
repeat
write('Data ',i,'th : ');readln(x);
tot:= tot + x; i:= i + 1;
until i>n;
mean:=tot/n;
writeln(' Total = ',tot,' with mean = ',mean:4:2); 
end.  
